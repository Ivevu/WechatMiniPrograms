.main {
  padding: 0 30rpx 130rpx 30rpx;
}

.cover {
  width: 100%;
  height: 345rpx;
}

.content {
  padding: 35rpx 0;
  font-size: 24rpx;
  font-weight: 500;
  color: rgba(0, 0, 0, 1);
  line-height: 50rpx;
}

.content .title {
  font-weight: 600;
}

.endTime {
  display: flex;
  align-content: center;
  justify-content: space-between;
}

.icon {
  width: 25rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.bg {
  height: 100%;
}

.intro {
  width: 100%;
}

/* 底部 */

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  height: 90rpx;
  display: flex;
  width: 100%;
  z-index: 999;
}

.common {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 500;
  font-size: 36rpx;
}

.common.share {
  border: none;
  outline: none;
  text-decoration: none;
  color: rgba(69, 69, 69, 1);
  background: #f5f5f5;
  border-radius: 0;
}

button::after {
  border: none;
}

.button-hover {
  /*点击后样式*/
  background: #f5f5f5;
}

.signUp {
  color: #fff;
  background: #d02029;
}

button {
  border-radius: 0 !important;
}

/* 报名表单 */

.inputArea {
  display: flex;
  padding: 25rpx 0;
  align-items: center;
  border-bottom: 1px solid rgba(232, 232, 232, 1);
  justify-content: space-between;
}

.inputArea.img {
  flex-direction: column;
}

.inputArea:last-child {
  border: none;
}

.inputArea.isTextArea {
  flex-direction: column;
  align-items: flex-start;
}

/* 上传文件 */

.uploadList .inputArea:first-child {
  border-top: 1px solid rgba(232, 232, 232, 1);
}

.reupload {
  width: 120rpx;
  background: rgba(208, 32, 41, 1);
  font-size: 24rpx;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  margin: 0;
  padding: 0;
  margin-left: 15rpx;
}

textarea {
  width: 690rpx;
  height: 165rpx;
  font-size: 24rpx;
  font-weight: 500;
  border: 1px solid rgba(156, 156, 156, 1);
  color: rgba(21, 21, 21, 1);
}

.label {
  font-size: 24rpx;
  font-weight: 500;
  color: rgba(0, 0, 0, 1);
  /* height: 1.4rem; */
  line-height: 1.4rem;
  word-break: break-all;
  max-width: 560rpx;
}

.imgArea {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
}

.imgArea .preImg {
  width: 100rpx;
  margin: 20rpx;
}

.imgItem {
  position: relative;
}

.imgArea .close {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 5rpx;
  right: 20rpx;
}

input {
  margin-left: auto;
  font-size: 24rpx;
  text-align: right;
}

.placeholder {
  font-size: 24rpx;
  font-weight: 500;
  color: rgba(156, 156, 156, 1);
  text-align: right;
}

.placeholder.isActive {
  color: #000;
}

picker {
  margin-left: auto;
  min-width: 200rpx;
}

/* 新增报名 */

.add {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100rpx;
  font-size: 24rpx;
  font-weight: 600;
  color: rgba(21, 21, 21, 1);
}

.addIcon {
  width: 29rpx;
  height: 29rpx;
  margin-right: 30rpx;
}
