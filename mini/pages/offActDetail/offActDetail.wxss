.main {
  padding: 0 30rpx 30rpx 30rpx;
}

.cover {
  width: 100%;
  height: 345rpx;
}

.content {
  padding: 35rpx 0;
  font-size: 24rpx;
  font-weight: 500;
  color: rgba(0, 0, 0, 1);
  line-height: 50rpx;
}

.endTime {
  display: flex;
  align-content: center;
  justify-content: space-between;
}

.icon {
  width: 25rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.intro {
  width: 100%;
}

/* 底部 */

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  height: 90rpx;
  display: flex;
  width: 100%;
  z-index: 1;
}

.common {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 500;
  font-size: 36rpx;
}

.share {
  color: rgba(69, 69, 69, 1);
  background: #f5f5f5;
}

.signUp {
  color: #fff;
  background: #d02029;
}

/* 报名表单 */

.inputArea {
  display: flex;
  padding: 12.5rpx 0;
  align-items: center;
  border-bottom: 1px solid rgba(232, 232, 232, 1);
}

.inputArea:last-child {
  border: none;
}

.inputArea.isTextArea {
  flex-direction: column;
  align-items: flex-start;
}

textarea {
  width: 690rpx;
  height: 165rpx;
  font-size: 24rpx;
  font-weight: 500;
  border: 1px solid rgba(156, 156, 156, 1);
  color: rgba(21, 21, 21, 1);
}

.label {
  font-size: 24rpx;
  font-weight: 500;
  color: rgba(0, 0, 0, 1);
  height: 1.4rem;
  line-height: 1.4rem;
}

input {
  margin-left: auto;
  font-size: 24rpx;
  text-align: right;
}

.placeholder {
  font-size: 24rpx;
  font-weight: 500;
  color: rgba(156, 156, 156, 1);
  text-align: right;
}

/* 新增报名 */

.add {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100rpx;
  font-size: 24rpx;
  font-weight: 600;
  color: rgba(21, 21, 21, 1);
  margin-bottom: 70rpx;
}

.addIcon {
  width: 29rpx;
  height: 29rpx;
  margin-right: 30rpx;
}
