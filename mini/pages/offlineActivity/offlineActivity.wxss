.header {
  display: flex;
  width: 100%;
  height: 100rpx;
  align-items: center;
  border-bottom: 1px solid rgba(216, 216, 216, 1);
  margin-bottom: 35rpx;
}

.title {
  text-align: center;
  font-size: 30rpx;
  font-weight: 500;
  letter-spacing: 1rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
  width: 50%;
}

.title.isActive {
  color: rgba(208, 32, 41, 1);
}

.inner {
  width: 160rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.inner.isActive {
  border-bottom: 6rpx solid #d02029;
}
